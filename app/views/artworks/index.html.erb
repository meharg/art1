<h1>Listing artworks</h1>

<table>
  <tr>
    <th>Legacy</th>
    <th>Title</th>
    <th>Price</th>
    <th>Category</th>
    <th>Priority</th>
    <th>Size</th>
    <th>Image</th>
    <th>Thumb image</th>
    <th>Outsourced url</th>
    <th>Medium</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @artworks.each do |artwork| %>
  <tr>
    <td><%= artwork.legacy_id %></td>
    <td><%= artwork.title %></td>
    <td><%= artwork.price %></td>
    <td><%= artwork.category %></td>
    <td><%= artwork.priority %></td>
    <td><%= artwork.size %></td>
    <td><%= artwork.image %></td>
    <td><%= artwork.thumb_image %><img src="http://drawneartogod.com/paintings/<%= artwork.thumb_image %>"></td>
    <td><%= artwork.outsourced_url %></td>
    <td><%= artwork.medium %></td>
    <td><%= link_to 'Show', artwork %></td>
    <td><%= link_to 'Edit', edit_artwork_path(artwork) %></td>
    <td><%= link_to 'Destroy', artwork, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

